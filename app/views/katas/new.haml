.container
  = simple_form_for :kata  do |f|
    .form-group
      = f.input :name, input_html: { class: "form-control" }
      = f.input :language_id

    .form-group
      = f.label "What's your Kata all about?"
      = f.text_area :description, { class: "form-control" }

    .form-group
      = f.label "Code:"
      = f.text_area :text, {placeholder: "Your code goes here!", class: "form-control" }

    .form-group
      = f.button :submit, class: "btn btn-primary"
